<section>
<div class="container mt-5 login">
        <div class="card" style="width: 30rem;height: 22rem">            
            <div class="card-header login-header">Login into HOmiES</div>    
            <div class="card-body">
                <div>
                    {{#if loginErr}}
                    <h5 class="text-danger">Invalid username or password</h5>
                    {{/if}}
                </div>
                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label for="email-reg" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email-reg" name="Email" required>                        
                    </div>
                    <div class="mb-3">
                        <label for="password-reg" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password-reg" name="Password" required>
                    </div>
                    <div class="login-footer">
                    <div><a href="/signup" class="btn btn-success">Create account</a></div>
                    <div><button type="submit" class="btn btn-primary mt-2">Submit</button></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </section>